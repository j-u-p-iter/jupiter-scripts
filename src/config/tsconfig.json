{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "../../dist/lib",
    "allowJs": true
  },
  "include": [
    "../../src"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ]
}