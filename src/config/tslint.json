{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules":{
    "prettier": true,
    "no-console": false,
    "object-literal-sort-keys": "false",
    "no-empty": false,
    "only-arrow-functions": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "member-access": false,
    "interface-name": [true, "never-prefix"]
  },
  "jsRules": {
    "prettier": true,
    "no-console": false,
    "object-literal-sort-keys": false,
    "no-empty": false,
    "only-arrow-functions": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "member-access": false
  },
  "linterOptions":{
    "exclude": [
      "*.json",
      "**/*.json",
      "../coverage/**/*.js"
    ]
  }
}
